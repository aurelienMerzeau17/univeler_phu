            //            </ol>
            <span>
                <input type="submit" value="Se connecter" />
            </span>
            //        </fieldset>
            <span>
                @Html.ActionLink("S'inscrire", "Register", "Account")
            </span>

        }
            @Html.Action("ExternalLoginsList", "Account", new { ReturnUrl = ViewBag.ReturnUrl })
    
    
